<div class="row">
  <% @department.projects.each do |project| %>
  <div class="col-md-3">
    <div class=" panel panel-default project-panel">
      <div class="panel-heading">
        <h3 class="panel-title"><%= truncate(project.goal, :length => 20) %></h3>
      </div>
      <div class="panel-body">
        <p><%= truncate(project.goal, :length => 50) %></p>
        <%= link_to "VIEW", project, class: "btn btn-primary pull-right" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
