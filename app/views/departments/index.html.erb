<div class="row">
  <div class="col-md-12">
    <div class="department-container">
      <% @departments.each do |department| %>
        <div class="card">
          <div class="card_media">
            <h3 class="card_headline"><%= department.name %></h3>
          </div>
          <div class="card_body">
            <p>Have <%= department.projects.count %> Projects Running</p>
          </div>
          <footer class="card_footer">
            <%= link_to "VIEW", department %>
          </footer>
        </div>
      <% end %>
    </div>
  </div>
</div>
